#include <iostream>
#include <vector>
#include <string>
#include <stack>
#include <cstdlib>
#include <ctime>

using namespace std;

class TicTacToe {
private:
    vector<vector<char>> board;
    char currentPlayer;
    string playerXName, playerOName;
    int scoreX, scoreO, draws;
    int round;
    stack<pair<int,int>> lastMoves;
    bool vsComputer;

public:
    TicTacToe() {
        board = vector<vector<char>>(3, vector<char>(3, ' '));
        currentPlayer = 'X';
        scoreX = scoreO = draws = 0;
        round = 1;
        vsComputer = false;
        srand(time(0)); // pÃ«r random AI moves
    }

    void getPlayerNames() {
        cout << "Do you want to play vs Computer? (y/n): ";
        char choice;
        cin >> choice;
        cin.ignore();
        if(choice == 'y' || choice == 'Y'){
            vsComputer = true;
            cout << "Enter your name: ";
            getline(cin, playerXName);
            playerOName = "Computer";
        } else {
            vsComputer = false;
            cout << "Enter name for Player X: ";
            getline(cin, playerXName);
            cout << "Enter name for Player O: ";
            getline(cin, playerOName);
        }
    }

    void resetBoard() {
        board = vector<vector<char>>(3, vector<char>(3, ' '));
        currentPlayer = 'X';
        while (!lastMoves.empty()) lastMoves.pop();
    }

    void displayBoard() {
        cout << "Current Board:" << endl;
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                cout << board[i][j];
                if (j < 2) cout << "|";
            }
            cout << endl;
            if (i < 2) cout << "-----" << endl;
        }
    }

    bool placeMark(int row, int col) {
        if (row < 0 || row >= 3 || col < 0 || col >= 3 || board[row][col] != ' ') {
            cout << "Invalid move. Try again." << endl;
            return false;
        }
        board[row][col] = currentPlayer;
        lastMoves.push({row, col});
        return true;
    }

    void undoMove() {
        if (!lastMoves.empty()) {
            auto last = lastMoves.top();
            lastMoves.pop();
            board[last.first][last.second] = ' ';
            switchPlayer();
        } else {
            cout << "No moves to undo!" << endl;
        }
    }

    bool checkWin() {
        for (int i = 0; i < 3; i++) {
            if ((board[i][0] == currentPlayer && board[i][1] == currentPlayer && board[i][2] == currentPlayer) ||
                (board[0][i] == currentPlayer && board[1][i] == currentPlayer && board[2][i] == currentPlayer)) {
                return true;
            }
        }
        if ((board[0][0] == currentPlayer && board[1][1] == currentPlayer && board[2][2] == currentPlayer) ||
            (board[0][2] == currentPlayer && board[1][1] == currentPlayer && board[2][0] == currentPlayer)) {
            return true;
        }
        return false;
    }

    void switchPlayer() {
        currentPlayer = (currentPlayer == 'X') ? 'O' : 'X';
    }

    string getCurrentPlayerName() {
        return (currentPlayer == 'X') ? playerXName : playerOName;
    }

    void updateScore(char winner) {
        if (winner == 'X') scoreX++;
        else if (winner == 'O') scoreO++;
        else draws++;
    }

    void displayScores() {
        cout << "\nScoreboard:" << endl;
        cout << playerXName << " (X): " << scoreX << endl;
        cout << playerOName << " (O): " << scoreO << endl;
        cout << "Draws: " << draws << endl;
    }

    pair<int,int> getComputerMove() {
        int r, c;
        do {
            r = rand() % 3;
            c = rand() % 3;
        } while(board[r][c] != ' ');
        return {r, c};
    }

    void playGame() {
        getPlayerNames();
        char playAgain = 'y';

        while (playAgain == 'y' || playAgain == 'Y') {
            cout << "\n--- Round " << round << " ---\n";
            resetBoard();
            int row, col;
            bool gameEnded = false;

            for (int turn = 0; turn < 9; turn++) {
                displayBoard();
                if (vsComputer && currentPlayer == 'O') {
                    auto move = getComputerMove();
                    row = move.first;
                    col = move.second;
                    cout << "Computer chooses: " << row << " " << col << endl;
                } else {
                    cout << getCurrentPlayerName() << " (" << currentPlayer << "), enter your move (row[0-2] and col[0-2], -1 to undo): ";
                    cin >> row;
                    if(row == -1){
                        undoMove();
                        turn--;
                        continue;
                    }
                    cin >> col;
                }

                if (placeMark(row, col)) {
                    if (checkWin()) {
                        displayBoard();
                        cout << "\033[1;32m" << getCurrentPlayerName() << " (" << currentPlayer << ") wins!\033[0m" << endl;
                        updateScore(currentPlayer);
                        gameEnded = true;
                        break;
                    }
                    switchPlayer();
                } else {
                    turn--; // retry
                }
            }

            if (!gameEnded) {
                displayBoard();
                cout << "It's a draw!" << endl;
                updateScore('D');
            }

            displayScores();
            round++;
            cout << "\nDo you want to play again? (y/n): ";
            cin >> playAgain;
            cin.ignore();
        }
    }
};

int main() {
    TicTacToe game;
    game.playGame();
    return 0;
}
